package com.practice;
import java.util.Random;
import java.util.Scanner;
import java.util.random.RandomGenerator;


public class Rock_Paper_Scissor_game {
    public static void main(String[] args){

        System.out.println("This is a rock paper scissor game");
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter Your Choice");
        System.out.println("1.scisssor");
        System.out.println("2.rock");
        System.out.println("3.paper");
        int input=sc.nextInt();
        switch (input) {

            case 1: {
                System.out.println("your input is scissor");
                break;
            }
            case 2: {
                System.out.println("your input is rock");
            }
            case 3: {
                System.out.println("your input is paper");
            }
        }
        Random rand=new Random();
        int compi= rand.nextInt(3);

        if(compi==1){
    System.out.println("system choice is scissor");
}
        else if(compi==2){
            System.out.println("system choice is rock");
        }
       else if(compi==3){
            System.out.println("system choice is paper");
        }
else System.out.println("*********");

if (compi==1 && input==2){
    System.out.println("you won");
}
       else if (compi==1 && input==3){
            System.out.println("you lost");
        }
        else if(compi==1 && input==1){
            System.out.println("its a tie");
        }
else System.out.println("system wins");
  }
}
